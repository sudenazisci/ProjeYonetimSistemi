@model List<dynamic>

@{
    ViewData["Title"] = "Projeler ve Görevler";
}

<h2 class="text-center my-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 700; font-size: 2.5em; color: #f7b2d9;">Projeler ve Görevler</h2>

<!-- Tablo Arka Planı ve Şık Çerçeve -->
<table class="table table-striped table-bordered table-hover" style="background-color: #f8f0f5;">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Proje ID</th>
            <th>Görev Adı</th>
            <th>Açıklama</th>
            <th>Atanan Kullanıcı</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.ProjeId</td>
                <td>@task.GorevAdi</td>
                <td>@task.Aciklama</td>
                <td>@task.AtananKullanici</td>
                <td>@task.BaslangicTarihi</td>
                <td>@task.BitisTarihi</td>
                <td>@task.Durum</td>
                <td>
                    <!-- Düzenle Butonu -->
                    <a href="@Url.Action("Edit", "Task", new { id = task.Id })" class="btn btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background: linear-gradient(135deg, #d56e97, #a46ecf); /* Mor ve pembe arasında geçişli arka plan */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
        font-size: 2.5em;
        color: #f7b2d9; /* Başlık için pembe tonları */
    }

    table {
        border-radius: 10px; /* Yumuşak köşeler */
        overflow: hidden; /* Çerçeve kenarlarının düzgün olması için */
        width: 90%;
        margin: auto;
    }

    th, td {
        text-align: center; /* Hücre içerikleri ortalanır */
        padding: 12px; /* Hücre içi boşluk */
    }

    tbody tr:hover {
        background-color: #f1f1f1; /* Satır üzerine gelindiğinde arka plan rengi değişir */
    }

    th {
        background-color: #d56e97; /* Tablo başlık kısmı için pembe tonları */
        color: white; /* Başlık metni beyaz */
    }

    .btn-warning {
        background-color: #ffcc00;
        color: black;
        border: none;
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn-warning:hover {
            background-color: #e6b800;
        }
</style>
