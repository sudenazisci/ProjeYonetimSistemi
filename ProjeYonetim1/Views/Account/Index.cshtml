@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Proje Yönetim Sistemi</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .wrapper {
            width: 350px;
            padding: 40px;
            background: white;
            text-align: center;
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

            .wrapper img {
                width: 80px;
                margin-bottom: 10px;
            }

            .wrapper input {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border-radius: 8px;
                border: 1px solid #ccc;
                outline: none;
                transition: 0.3s;
            }

                .wrapper input:focus {
                    border-color: #764ba2;
                    box-shadow: 0 0 5px rgba(118, 75, 162, 0.5);
                }

            .wrapper .btn {
                width: 100%;
                padding: 10px;
                background: #5a67d8;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 16px;
                cursor: pointer;
                transition: 0.3s;
            }

                .wrapper .btn:hover {
                    background: #434190;
                }

            .wrapper a {
                color: #764ba2;
                text-decoration: none;
                font-size: 14px;
            }

                .wrapper a:hover {
                    text-decoration: underline;
                }

        .footer {
            margin-top: 10px;
            font-size: 12px;
            color: #999;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 2.5em;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            background: linear-gradient(135deg, #f7b2d9, #a46ecf); /* Pembe-mor geçişli */
            -webkit-background-clip: text;
            color: transparent;
            animation: textAnimation 3s ease-in-out infinite alternate;
        }

       
    </style>
</head>
<body>

    <!-- Başlık Ekleme -->
    <div class="header">
        Proje Yönetim Sistemi Giriş
    </div>

    <div class="wrapper">
        <div>
            <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="User Icon">
        </div>

        <form class="login100-form validate-form" action="/Account/Login" method="post" autocomplete="off">
            <input type="text" name="Email" placeholder="Kullanıcı Adı" required>
            <input type="password" name="SifreHash" placeholder="Şifre" required>
            <button type="submit" class="btn">Giriş Yap</button>
        </form>

       

        <div class="footer">
            Designed by <strong>Sude Naz İşci</strong>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
